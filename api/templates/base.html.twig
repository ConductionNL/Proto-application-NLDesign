    <body>

        <div class="wrapper">
            <a class="skiplink" href="#content">
                <span class="skiplink__text">{{ 'skip to content'|trans|capitalize }}</span>
            </a>

            {# lets be able to disable this #}
            {% if application['defaultConfiguration']['configuration']['header'] is not defined or (application['defaultConfiguration']['configuration']['header'] is defined and application['defaultConfiguration']['configuration']['header'] != 'false')  %}
            {% include "header.html.twig" %}
            {% endif %}

            {% include "menu.html.twig" %}

            {% if application is defined and application.id == '3f44c00e-d919-4f89-bd4c-b730c9b2620a' and slug is defined and slug == 'home' %}
            <main class="skiplink-target main" id="content" tabindex="-1" style="padding-top: 0px">
            {% else %}
            <main class="skiplink-target main" id="content" tabindex="-1">
            {% endif %}

                <div class="container">

                    <!-- the alert box -->
                    {% for label, messages in app.flashes() %}
                        {% for message in messages %}
                            <div class="notification notification--{{ label }}">
                                <div class="notification__content">
                                    <h2 class="notification__title">{{ message|trans|capitalize }}</h2>
                                </div>
                            </div>
                        {% endfor %}
                    {% endfor %}

                    {% block content %}

                    {% endblock %}

                </div>
            </main>

            {% include "footer.html.twig" %}

            <script src="/js/highlight.pack.js"></script>

            <script>
                // Load collapse component
                System['import']('/uno/components/collapse/collapse.js').then(function (m) {

                    //gebruikt unieke id van de nav om te voorkomen dat example collapses ook automatisch geactiveerd worden.
                    new m.Collapse(document.querySelector('#search-trigger'));
                });
                // Load nav component
                System.import('/uno/components/navigation/navigation.js').then(function (module) {
                    var navs = document.querySelectorAll('.top-nav-autoresize');
                    // Initialize all navs
                    for (var i = 0; i < navs.length; i++) {
                        new module.AutoResizeNavigation(navs.item(i));
                    }
                    var submenus = document.querySelectorAll('.nav--submenu');
                    // Initialize all submenus
                    for (var i = 0; i < submenus.length; i++) {
                        new module.SubMenuNavigation(submenus.item(i));
                    }
                });
            </script>

        </div>

    {% if application['defaultConfiguration']['configuration']['hubspotId'] is defined and application['defaultConfiguration']['configuration']['hubspotId'] is not empty %}
