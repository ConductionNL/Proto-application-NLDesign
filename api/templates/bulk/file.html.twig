{% extends "content.html.twig" %}

{% block content %}
<form action="#" method="post" enctype="multipart/form-data">
    <div class="input input--horizontal">
        <label>
            <div>
                <label class="input__label" for="file">
                    File upload</label>
            </div>
            {% if not app.user %}

            <aside class="hint" id="file">
                <h2 class="hint__title">{{ 'login required'|trans|capitalize}}</h2>
                {{ 'you need to login before you can upload files'|trans|capitalize}}
            </aside>
            {% else %}
            <input type="file" id="file" class="input__control--file" name="file" aria-describedby="input-upload-hint">
            <span class="btn" role="button">Bestand uploaden</span> <span id="fileName"></span>
        </label>
        {% endif %}
    </div>
    <button class="btn btn--block" name="submit">Send</button>
</form>
{% endblock %}
