{% extends "base.html.twig" %}
    {% block content %}

        <style>

            #display {
                list-style-type: disc;
                -webkit-column-count: 2;
                -moz-column-count: 2;
                column-count: 2;
            }
        </style>


        <h1>Nieuws templates</h1>
        <ul class="list list--card list--card-small" id="display">
            {% for template in templates %}
                <li class="card card--small">
                    <a href="{{ path('app_sarai_template', {id: template.id}) }}" class="card__content">
                        <div class="card__body">
                            <span class="card__title">{{ template.name }}</span><br>
                            <p class="paragraph--s">{{ template.dateModified }}</p>
                        </div>
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% endblock %}
