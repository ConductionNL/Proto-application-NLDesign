                <li class="navigation__item">
                    <a class="navigation__link" data-toggle="modal" data-target="#myModal" onclick="openModal()"><i
                            style="margin-right: 10px" class="fas fa-lock"></i> {{ 'login'|trans|capitalize }}
                    </a>
                </li>
            {% else %}
