
<div class="input input--horizontal">
    <div>
        <label class="input__label" for="{{ property.id }}">{{ property.title }}</label>
    </div>
    <textarea class="input__control input__control--text input__control--l" id="{{ property.id }}" name="request[properties][{{ property.name }}]" {% if property.required is defined and property.required %}required{% endif %}
        {% if request['properties'][property.name] is defined and  request['properties'][property.name] %}
        value="{{  request['properties'][property.name] }}"
        {% endif %}></textarea>
</div>

