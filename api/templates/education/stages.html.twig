{% extends 'base.html.twig' %}

{% block content %}
    <h1>Stages</h1>
    <div class="row">
        <div class="col-sm-8">
            {% if resources is not empty %}
                <ul class="list list--card list--card-small">
                    {% for stage in resources %}
                        <li class="card card--small">
                            <div class="card__content">
                                <div class="card__thumb" style="background-image: url('https://picsum.photos/200')"></div>
                                <div class="card__body">
                                    <div class="row" style=" height: 100%; width: 100%;">
                                        <div class="col-sm-8" style="padding-right: 0px;">
                                            {% if stage.title is defined and stage.title is not empty %}
                                                <span class="card__title">{{ stage.title }}</span><br>
                                            {% else %}
                                                <span class="card__title">{{ stage.name }}</span><br>
                                            {% endif %}
                                            <span>{{ stage.description }}</span>
                                        </div>
                                        <div class="col-sm-4">
                                            <div style="float: right;">
                                                <div style="display: flex; flex-direction: column; justify-items: center;">
                                                    {% if stage.employmentType is defined and stage.employmentType is not empty %}
                                                        <p style="margin: 0;">dienstverband: {{ stage.employmentType }}</p>
                                                    {% endif %}
                                                    {% if stage.jobStartDate is defined and stage.jobStartDate is not empty %}
                                                        <p style="margin: 0;">startdatum: {{ stage.jobStartDate|date("d-m-Y", "Europe/Paris") }}</p>
                                                    {% endif %}
                                                    <a href="{{ path('app_education_stage', {id: stage.id}) }}">lees meer</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <p>Er zijn op dit moment geen stages</p>
            {% endif %}
        </div>
    </div>
{% endblock %}
