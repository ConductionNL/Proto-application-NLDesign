<div class="modal modal--backdrop noFocus" role="dialog" id="checkin-{{ item.id }}" tabindex="-1"
     aria-describedby="modal-description3">
    <section class="modal__content noFocus" role="document">
        <div class="modal__body noFocus" tabindex="0" lang="en-US">
            <div class="flex-center" style="height: 100%">
                <div class="row">
                    <div class="col-xs-12">
                        <span style="font-size: 20rem; color: #39870c;" class="icon icon-check" title=""></span>
                    </div>
                    <div class="col-xs-12">
                        <h3 style="color: white">Ingecheckt!</h3>
                    </div>
                    <div class="col-xs-12">
                        <h3>{{ commonground_resource(item.node.place).name }}</h3>
                    </div>
                    <div class="col-xs-12">
                        <h3>{{ item.dateCreated|date("H:i d-m-Y", "Europe/Amsterdam") }}</h3>
                    </div>
                    {% if item.node.organization is defined and item.node.organization is not empty and 'http' in item.node.organization %}
                        {% set org = commonground_resource(item.node.organization) %}
                        {% set orgCc = commonground_resource_list({'component':'cc', 'type':'organizations'}, {'name':org.name})['hydra:member'] %}
                        {% if orgCc[0] is defined and orgCc[0] is not empty %}
                            {% set orgCc = orgCc[0] %}
                            {% if orgCc.socials[0] is defined %}
                                {% set social = orgCc.socials[0] %}
                                {% if social.website is defined and social.website is not empty %}
                                    <div class="col-xs-12 noFocus" style="padding-top: 20px; margin-bottom: 10px">
                                        <a href="{{ social.website }}" target="_blank" class="btn btn--primary noFocus" style="background-color: white; border-radius: 25px; padding: 25px 50px;
  border: 2px solid black; color: black;">Naar site van {{ commonground_resource(item.node.place).name }}
                                        </a>
                                    </div>
                                {% endif %}
                            {% endif %}
                        {% endif %}
                    {% endif %}
                    <div class="col-xs-12 noFocus" style="padding-top: 20px;">
                        <button class="modal__close-button btn btn--primary noFocus" style="background-color: white; border-radius: 25px; padding: 25px 50px;
  border: 2px solid black; color: black;">Deze melding sluiten
                        </button>
                    </div>
                    <div class="col-xs-12" style="margin-top: 26px; margin-bottom: 10px">
                        <span>- Powered by -</span>
                    </div>
                    <div class="col-xs-12 flex-center">
                        <div class="row">
                            <div class="col-xs-4">
                                <a href="https://www.khn.nl/" target="_blank"><img src="../../images/horecaNederland.png" width="50px" alt=""></a>
                            </div>
                            <div class="col-xs-4">
                                <a href="https://www.rabobank.nl/" target="_blank"><img src="../../images/rabobank.png" width="50px" alt=""></a>
                            </div>
                            <div class="col-xs-4">
                                <a href="https://www.conduction.nl/" target="_blank"><img src="../../images/conduction.png" width="50px" alt=""></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
