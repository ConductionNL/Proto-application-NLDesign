
            <div class="content-background" >
            	<div class="content">
                    <h2>{{ 'messages'|trans|capitalize }}</h2>
                    {% if resources is defined and resources is not empty %}
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th scope="col">{{ 'organization'|trans|capitalize }}</th>
                            <th scope="col">{{ 'place'|trans|capitalize }}</th>
                            <th scope="col">{{ 'creation date'|trans|capitalize }}</th>
                            <th scope="col">{{ 'deletion date'|trans|capitalize }}</th>

                            <th scope="col"></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for checkin in checkins %}
                        <tr>
                            <td>{{ commonground_resource(checkin.node.organization).name|capitalize }}</td>
                            <td>{{ commonground_resource(checkin.node.place).name|capitalize }}</td>
                            <td>{{ checkin.dateCreated|date("i:H d-m-Y") }}</td>
                            <td>{{ checkin.dateCreated|date_modify("+12 day")|date("i:H d-m-Y") }}</td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    {% else %}
                        <aside class="hint">
                            <h2 class="hint__title">{{ 'no checkins available'|trans|capitalize }}</h2>
                        </aside>
                    {% endif %}
                </div><!-- /.content -->
            </div><!-- /.content-background -->
